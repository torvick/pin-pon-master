<div class="container">
  <h2 class="text-center text-uppercase text-secondary mb-0">Game</h2>
  <hr class="star-dark mb-5">
  <div class="row">
    <div class="col-lg-3 mx-auto">

        <p>
          <strong>Game:</strong>
          <%= @game.id %>
        </p>

        <p>
          <strong>Player 1:</strong>
          <%= @game.from_user.alias %>
        </p>

        <p>
          <strong>Player 2:</strong>
          <%= @game.to_user.alias %>
        </p>

        <p>
          <strong>Winner:</strong>
          <%= @game.winner %>
        </p>

        <%= link_to 'Editar', edit_game_path(@game), :class => 'btn btn-primary' %>
        <%= link_to 'Atras', games_path, :class => 'btn btn-primary' %>

      </div>
    </div>
  </div>